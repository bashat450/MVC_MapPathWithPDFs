@model CrudMap.Models.AllModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>AllModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Photo</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Url.Content(Model.ImagePath)" width="150" height="150" alt="Current Image" />
            }
            else
            {
                <span>No image uploaded</span>
            }
        </dd>
        
        <dt>PDF</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.PdfPath))
            {
                <a href="@Url.Content(Model.PdfPath)" target="_blank">Download PDF</a>
            }
            else
            {
                <span>No PDF uploaded</span>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Lists")
</p>
